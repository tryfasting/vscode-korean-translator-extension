{
  "name": "korean-code-translator",
  "displayName": "Korean Code Translator",
  "description": "Translate comments and variables to Korean on hover and keyboard shortcut",
  "version": "1.1.4",
  "publisher": "sonsanghee-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Higangssh/korean-translator.git"
  },
  "homepage": "https://github.com/Higangssh/korean-translator",
  "bugs": {
    "url": "https://github.com/Higangssh/korean-translator/issues"
  },
  "author": {
    "name": "Sang hee Son",
    "email": "sonsanghee3@gmail.com"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0",
    "cursor": "^0.1.0"
  },
  "categories": [
    "Other",
    "Education",
    "Snippets"
  ],
  "keywords": [
    "korean",
    "translation",
    "translator",
    "한국어",
    "번역",
    "comments",
    "variables",
    "hover",
    "productivity",
    "cursor",
    "cursor-editor"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "korean-translator.translateSelection",
        "title": "번역하기",
        "category": "Korean Translator"
      },
      {
        "command": "korean-translator.toggle",
        "title": "번역 기능 토글",
        "category": "Korean Translator"
      },
      {
        "command": "korean-translator.clearCache",
        "title": "캐시 초기화",
        "category": "Korean Translator"
      },
      {
        "command": "korean-translator.cacheStatus",
        "title": "캐시 상태 확인",
        "category": "Korean Translator"
      },
      {
        "command": "korean-translator.setupGPT",
        "title": "GPT 설정 완료 및 재시작",
        "category": "Korean Translator"
      }
    ],
    "keybindings": [
      {
        "command": "korean-translator.translateSelection",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Korean Translator",
      "properties": {
        "korean-translator.enabled": {
          "type": "boolean",
          "default": true,
          "description": "확장 프로그램 활성화 여부"
        },
        "korean-translator.debounceDelay": {
          "type": "number",
          "default": 100,
          "description": "호버 번역 대기 시간 (ms)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:all": "npm run test:jest && npm run test",
    "release:patch": "npm version patch && git push origin main --tags",
    "release:minor": "npm version minor && git push origin main --tags",
    "release:major": "npm version major && git push origin main --tags"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/sinon": "^17.0.4",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.6.0",
    "chai": "^5.2.0",
    "eslint": "^9.25.1",
    "jest": "^30.0.2",
    "mocha": "^11.7.0",
    "sinon": "^21.0.0",
    "ts-jest": "^29.4.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.0.0-rc.12",
    "openai": "^4.67.1"
  }
}
